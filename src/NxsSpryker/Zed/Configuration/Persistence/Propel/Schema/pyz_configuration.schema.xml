<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\Configurations\Persistence"
          package="src.Orm.Zed.Configurations.Persistence">

    <table name="nxs_configurations" idMethod="native" allowPkInsert="true" identifierQuoting="true">
        <column name="id" required="true" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="name" required="true" size="255" type="VARCHAR"/>
        <column name="value" required="true" size="255" type="VARCHAR"/>
        <column name="created" type="TIMESTAMP" defaultExpr="CURRENT_TIMESTAMP"/>
        <index>
            <index-column name="name"/>
        </index>
        <unique name="nxs_configurations_unique_key">
            <unique-column name="name"/>
        </unique>
        <id-method-parameter value="nxs_configurations_id_seq"/>
    </table>
</database>
